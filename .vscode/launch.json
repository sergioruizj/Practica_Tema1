{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },{
            "name": "Run Application (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["${command:pickArgs}"]
        },
        {
            "name": "Run All Tests (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["--test", "--benchmark-time-unit=ms", "--benchmark-warmup=on", "-v", "-s"]
        },
        {
            "name": "Run Specific Test (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["--test", "--benchmark-time-unit=ms", "--benchmark-warmup=on", "-v", "-s", "-k", "${command:pickArgs}"]
        }
    ]
}